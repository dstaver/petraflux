      "syncpack": "14.0.0-alpha.32",
      "tailwindcss": "4.1.17",
      "tsdown": "0.17.0",
      "typescript": "5.9.3",
      "vite": "8.0.0-beta.0"
    }
  },
  "dependencies": {
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
